<ul data-id="{{reading.id}}" data-book="{{reading.book.id}}">
  <li> <h4>Title: {{reading.book.title}}</h4></li>
  <li>Author: {{reading.book.author}}</li>
  <li>Published In: {{reading.book.published_in}}</li>
  <li>Status: {{reading.status}}
  {{#if reading.book.description}}
    <li>{{reading.book.description}}</li>
  {{else}}
    <li>No description.</li>
  {{/if}}
</ul>
{{> update-book-modal book=reading.book}}
{{> remove-reading reading=reading}}
